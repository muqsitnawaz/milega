<div class="row" style="background-color: #FFA500">
  <div class="col-xs-2" style="margin-top: -1%;">
    <h2  style="margin-left: 3%;"> <%= image_tag 'logo_transparent_1.png', size: "200x40" %></h2>
  </div>

  <div class="col-xs-4">
    .
  </div>

  <div id="user-links" class="col-xs-6" style="margin-top:0.7%;">
    <% if user_signed_in? %>
      <% if is_admin? %>
          <div class="inline" style="margin-left:8%;">
            <div class="btn btn-custom-header"> <%= current_user.uname %> </div>
            <%= link_to 'Admin\'s Panel', '/admin', class: "btn btn-custom-header" %>
            <%= link_to 'View Companies', '/companies', class: "btn btn-custom-header" %>
            <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: "btn btn-custom-sign" %>
          </div>
      <% elsif is_company_owner? %>
        <div class="inline" style="margin-left:31%;">
          <div class="btn btn-custom-header"> <%= current_user.uname %> </div>
          <%= link_to 'View Companies', '/companies', class: "btn btn-custom-header" %>
          <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: "btn btn-custom-sign" %>
        </div>
      <% else %>
        <div class="inline" style="margin-left:29%;">
          <div class="btn btn-custom-header"> <%= current_user.uname %> </div>
          <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: "btn btn-custom-sign" %>
          <div class="cart-text inline"><%= render 'layouts/cart_text' %></div>
        </div>
      <% end %>
    <% else %> <!-- user_signed_in's else -->
      <div class="inline" style="margin-left:35%;">
        <%= link_to 'Sign In', new_user_session_path, class: "btn btn-custom-sign" %>
        <%= link_to 'Register', new_user_registration_path, class: "btn btn-custom-sign" %>
      </div>

      <div class="cart-text inline"><%= render 'layouts/cart_text' %></div>
    <% end %>
  </div>
</div>