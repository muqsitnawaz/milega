<div class="col-xs-3">
  <div class="row">
    <div class="col-xs-12">
      <div id="thumbnail_<%= product.id %>" class="thumbnail" style="border: 0px; border-radius: 0px;">
        <!-- product's image -->
        <%= link_to image_tag(product.p_c1_image1_url.to_s), product_path(product), class: "img img-responsive" %>

        <!-- image's caption -->
        <div id="caption_<%= product.id %>" class="caption">
          <p style="margin: 0px;"><strong><%= product.pname %></strong></p>
          <hr style="margin: 0px;">
          <div class="row">
            <div class="col-xs-9">
              <%= number_to_currency(product.pprice, unit: "Rs ") %>
            </div>
          </div>

          <div id="form_<%= product.id %>" style="opacity: 0;">
            <center>
              <div class="btn-group">
                <%= link_to 'View Item', product_path(product), class: "btn btn-default" %>
                <%= link_to 'Buy Now', buy_now_path(order_item: {product_id: product.id}), class: "btn btn-default", data: { confirm: 'Are you sure you want to purchase this item?'} %>
              </div>
            </center>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>