<div class="col-xs-3">
  <div class="row">
    <div class="col-xs-12">
      <div id="thumbnail_<%= product.id %>" class="thumbnail" style="border: 0px; border-radius: 0px;">
        <!-- product's image -->
        <div style="position: relative; width: 100%;">
          <%= link_to image_tag(product.p_c1_image1_url.to_s), product_path(product), class: "img img-responsive" %>
          
          <div id="buynow_<%= product.id %>" class="row hidden" style="position: absolute; top: 0px; width: 100%; line-height: 38;">
            <div class="col-xs-5">
              <div >
                <center>
                  <div class="btn btn-default">
                    Buy Now
                  </div>
                </center>
              </div>
            </div>
            <div class="col-xs-5" style="margin-left: 16.5%;">
              <%= link_to 'View Item', product_path(product), class: "btn btn-default" %>
            </div>
          </div>
          
        </div>

        <!-- image's caption -->
        <div id="caption_<%= product.id %>" class="caption">
          <p style="margin: 0px;"><strong><%= product.pname %></strong></p>
          <hr style="margin: 0px;">
          <div class="row">
            <div class="col-xs-9">
              <%= number_to_currency(product.pprice, unit: "Rs ") %>
            </div>
            <div class="col-xs-3">
              <%= link_to 'View', product_path(product) %>
            </div>
          </div>


          <div id="form_<%= product.id %>" style="opacity: 0;">
            <%= form_for order_item, remote: true do |f| %>
  <div>
    <div class="input-group">
      <%= f.number_field :quantity, value: 1, class: "form-control", min: 1 %>

      <div class="input-group-btn">
        <%= f.hidden_field :product_id, value: product.id %>
        <%= f.submit "Add to Cart", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>